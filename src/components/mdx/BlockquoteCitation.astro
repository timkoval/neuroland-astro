---
const { author, title, url, small } = Astro.props;
---

<figure>
	<blockquote class:list={["blockquote", { small }]}>
		<slot />
		<figcaption>
			<cite class="cite">
				<span>{author}</span>
				{title && <a href={url}> â€“ {title}</a>}
			</cite>
		</figcaption>
	</blockquote>
</figure>

<style>
	.cite {
		font-size: var(--font-size-xs);
		color: var(--flexoki-600);
		font-family: var(--font-sans);
		font-weight: 400;
		letter-spacing: 0.01em;
		margin: 0 auto;
		text-align: center;
		font-style: normal;
		max-width: 300px;
	}

	.blockquote p {
		font-size: var(--font-size-m);
		line-height: 1.25;
		margin-bottom: 0;
	}

	.blockquote.small p {
		font-size: var(--font-size-base);
		line-height: 1.5;
	}

	.blockquote > p {
		margin: var(--space-m) auto var(--space-s) !important;
	}

	.blockquote::after {
		content: "";
		display: block;
		margin: var(--space-s) auto 0 !important;
		width: 3rem;
		border-top: 2px solid rgba(0, 0, 0, 0.1);
	}
</style>
