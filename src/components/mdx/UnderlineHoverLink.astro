---
const { href } = Astro.props;
---

<span class="link-container">
	<a {href} class="styled-link">
		<span><slot /></span>
	</a>
</span>

<style>
	.link-container {
		display: inline-block;
		align-items: center;
		justify-content: center;
		position: relative;
	}

	.styled-link {
		cursor: pointer;
		position: relative;
		white-space: nowrap;
		text-decoration: none;
		outline: none;
		padding-bottom: 0.25rem;
	}

	.styled-link:focus {
		outline: 2px solid darkblue;
		border-radius: 2px;
	}

	.styled-link::before {
		content: "";
		transform-origin: 50% 100%;
		background: var(--flexoki-150);
		transition:
			clip-path 0.3s,
			transform 0.3s cubic-bezier(0.2, 1, 0.8, 1);
		position: absolute;
		width: 100%;
		height: 1px;
		top: 95%;
		left: 0;
		pointer-events: none;
		clip-path: polygon(
			0% 0%,
			0% 100%,
			0 100%,
			0 0,
			100% 0,
			100% 100%,
			0 100%,
			0 100%,
			100% 100%,
			100% 0%
		);
	}

	.styled-link:hover::before {
		transform: translate3d(0, 2px, 0) scale3d(1, 2, 1);
		clip-path: polygon(
			0% 0%,
			0% 100%,
			100% 100%,
			50% 0,
			50% 0,
			50% 100%,
			50% 100%,
			0 100%,
			100% 100%,
			100% 0%
		);
	}

	.styled-link span {
		display: inline-block;
		transition: all 0.5s cubic-bezier(0.2, 1, 0.8, 1);
		color: var(--flexoki-magenta-600);
	}

	.styled-link:hover span {
		transform: translate3d(0, -2px, 0);
		color: var(--flexoki-cyan-600);
	}
</style>
