---
import { Icon } from "astro-icon/components";
import Tooltip from "./Tooltip.astro";

const { href } = Astro.props;
---

<Tooltip>
	<div class="link-container">
		<a href={href} class="styled-link">
			<slot />
		</a>
	</div>

	<a slot="content" class="external-url" href={href}>
		{href}
		<Icon
			name="heroicons:arrow-top-right-on-square-20-solid"
			size={18}
			class="icon"
		/>
	</a>
</Tooltip>

<style>
	.external-url {
		color: var(--flexoki-600);
		transition: color 0.2s ease-in-out;
		text-align: center;
	}

	.external-url:hover {
		color: var(--flexoki-magenta-600);
	}

	.icon {
		position: relative;
		top: 3px;
	}

	.link-container {
		margin: var(--space-24) auto;
		transition: all 300ms ease-in-out;
	}

	.link-container:hover {
		transform: scale3d(1.02, 1.02, 1.02);
	}

	.styled-link {
		background-color: var(--flexoki-magenta-600);
		padding: var(--space-16) var(--space-24);
		border-radius: var(--border-radius-base);
		color: white;
		font-weight: 400;
		font-family: var(--font-sans);
		transition: all 300ms ease-in-out;
	}

	.styled-link:hover {
		background-color: var(--color-medium-sea-blue);
	}
</style>
