	const target = mention["wm-target"];
	const baseUrl = `https://maggieappleton.com/${postSlug}`;
	// Match different variations of the URL
	return (
		target === baseUrl ||
		target === `${baseUrl}/` ||
		target === `${baseUrl}.mdx` ||
		target === `${baseUrl}.mdx/` ||
