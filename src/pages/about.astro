---
import Layout from "../layouts/Layout.astro";
import Title1 from "../components/mdx/typography/Title1.astro";
import Title2 from "../components/mdx/typography/Title2.astro";
import SmallCaps from "../components/mdx/typography/SmallCaps.astro";
import UnderlineHoverLink from "../components/mdx/UnderlineHoverLink.astro";
import PageWrapper from "../components/layouts/PageWrapper.astro";
import { Image } from "astro:assets";
import Casual from "../images/general/casual.jpg";
// import Scarf from "../images/general/Scarf_1000.jpg";
// import Brown from "../images/general/Brown_1000.jpg";

const photoSources = [Casual];
---

<script>
	const photos = document.querySelectorAll(".random-photo");
	const randomIndex = Math.floor(Math.random() * photos.length);

	// Hide all photos except the random one
	photos.forEach((photo, index) => {
		if (index === randomIndex) {
			photo.style.display = "block";
		}
	});
</script>

<Layout title="About Tim Koval" desc="Edge Devices & Robotics Engineer.">
	<PageWrapper>
		<div class="header-section">
			<SmallCaps>About</SmallCaps>
			<Title1>Tim Koval</Title1>
			<Title2>Edge Devices & Robotics Engineer</Title2>
		</div>
		<div class="styled-main">
			<section class="intro">
				<div>
					<SmallCaps>A Little Context</SmallCaps>
					<p>
						I thrive at the intersection of robotics, edge computing, and innovative software development. 
						These passions drive my work, blending technical expertise with a commitment to advancing 
						technology in unique and impactful ways.
					</p>
					<p>
						My career spans roles in software engineering, research, and hardware integration, with a focus on 
						creating efficient, secure, and scalable solutions. I currently contribute as a Rust Edge Devices SDK 
						Engineer in Dubai, where I develop tools to enhance data processing and connectivity. My efforts also
						extend to NeuroDynamica, an independent research initiative exploring the frontiers of robotics and edge systems.
					</p>
					<p>
						On the side, I cultivate a digital gardenâ€”a space where I document my learning, share insights, and experiment with
						new ideas, reflecting my dedication to continuous growth and knowledge sharing.
					</p>
					<SmallCaps>A Little History</SmallCaps>
					<p>
						Originally from Kazakhstan, I grew up with a curiosity for technology that led me to study at the International IT University
						before pursuing a BSc in Computer Science (Physical Computing and IoT) at the University of London. My journey has taken me across
						continents, shaping my skills through hands-on experience and academic exploration.
					</p>
					<p>
						My technical roots began with embedded systems in <br> C/C++, evolving into a deep dive into Rust for its performance and security benefits, 
						particularly in FinTech and robotics. This path has brought me to Dubai, where I now balance my professional role with a lifelong aspiration 
						to pursue a PhD and further academic research in my field.
					</p>
					<p>
						This blend of global experience and technical passion fuels my work, as I strive to bridge practical engineering with academic inquiry.
					</p>
				</div>
				{
					photoSources.map((photo, index) => (
						<Image
							src={photo}
							alt="a photo of maggie appleton"
							width={800 / 1.25}
							height={1200 / 1.25}
							style={`object-fit: contain; display: none;`}
							class="random-photo"
							id={`photo-${index}`}
						/>
					))
				}
			</section>
		</div>
	</PageWrapper>
</Layout>

<style>
	.header-section {
		margin: var(--space-m) auto 0;
	}
	.header-section :global(.small-caps) {
		margin-bottom: var(--space-3xs);
		color: var(--color-gray-600);
	}
	.header-section h1 {
		margin-bottom: var(--space-s);
	}
	.header-section h2 {
		color: var(--color-gray-800);
	}

	.styled-main {
		margin-top: var(--space-xs);
		padding: var(--space-xl) 0;
		width: 100%;
	}

	@media (max-width: 768px) {
		.styled-main {
			padding: var(--space-l) var(--space-xs);
		}
	}

	.styled-main img {
		border-radius: 4px;
	}

	.styled-main h2 {
		margin-bottom: var(--space-s);
	}

	.styled-main p {
		line-height: var(--leading-loose);
		max-width: 52ch;
	}

	.styled-main p:not(:last-of-type) {
		margin-bottom: var(--space-s);
	}

	.intro {
		display: grid;
		grid-template-columns: 4fr 3fr;
		gap: var(--space-xl);
		align-items: flex-start;
	}

	.intro :global(.small-caps):not(:first-of-type) {
		margin-top: var(--space-xl);
		color: var(--color-gray-900);
	}

	.intro :global(.small-caps)::before {
		content: "";
		display: inline-block;
		width: 20px;
		clear: both;
		height: 20px;
		margin-right: -1.5rem;
		background-image: url("/images/roboarm.svg");
		background-size: contain;
		background-repeat: no-repeat;
		position: relative;
		top: 4px;
		right: 2.25rem;
	}

	@media (max-width: 768px) {
		.intro {
			grid-template-columns: 1fr;
			gap: var(--space-m);
			flex-direction: column;
		}
	}

	.intro :global(.small-caps) {
		margin-bottom: 1.5rem;
	}
</style>
