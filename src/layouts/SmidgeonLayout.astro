---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";
import { Icon } from "astro-icon/components";
import WebMentions from "../components/layouts/WebMentions.astro";
import Topics from "../components/layouts/Topics.astro";

type Props = {
	frontmatter: CollectionEntry<"smidgeons">["data"];
};

const { frontmatter } = Astro.props;
const currentSlug = Astro.url.pathname.replace(/^\/|\/$/g, "");
---

<Layout title={frontmatter.title} type="smidgeon">
	<header class="header-section">
		<div class="above-title">
			<div class="back-link">
				<a href="/smidgeons">
					<Icon name="heroicons:arrow-left" size={16} />
					<span>Back to Smidgeons</span>
				</a>
			</div>
		</div>

		<div class="smidgeon-layout">
			<div class="metadata">
				<div class="date-permalink">
					<time datetime={frontmatter.startDate.toISOString()}>
						{
							frontmatter.startDate.toLocaleDateString("en-US", {
								year: "numeric",
								month: "long",
								day: "numeric",
							})
						}
					</time>
				</div>
				{frontmatter.topics && <Topics topics={frontmatter.topics} />}
			</div>

			<div class="content">
				{/* External Link Format */}
				{
					frontmatter.external && (
						<a href={frontmatter.external.url} target="_blank" rel="noopener noreferrer">
							<div class="reference-card">
								<h1 class="content-header">
									{frontmatter.external.title}
									<Icon name="heroicons:arrow-top-right-on-square" size={16} />
								</h1>
								{frontmatter.external.author && (
									<p class="byline">
										<Icon name="heroicons:user" size={14} />
										{frontmatter.external.author}
									</p>
								)}
							</div>
						</a>
					)
				}

				{/* Academic Paper Format */}
				{
					frontmatter.citation && (
						<a href={frontmatter.citation.url} target="_blank" rel="noopener noreferrer">
							<div class="reference-card">
								<div class="citation-header">
									<h1 class="content-header">
										{frontmatter.citation.title}
										<Icon name="heroicons:arrow-top-right-on-square" size={16} />
									</h1>
									<div class="citation-metadata">
										<p class="byline">
											<Icon name="heroicons:users" size={14} />
											{frontmatter.citation.authors.join(", ")}
										</p>
										<p class="journal-info byline">
											<Icon name="heroicons:academic-cap" size={14} />
											{frontmatter.citation.journal} ({frontmatter.citation.year})
										</p>
									</div>
								</div>
							</div>
						</a>
					)
				}

				<div class="prose">
					<slot />
				</div>
			</div>
		</div>
	</header>

	<WebMentions postSlug={currentSlug} hasBacklinks={false} />
</Layout>

<style>
	.header-section {
		max-width: 1000px;
		margin: var(--space-l) auto 0;
	}

	.smidgeon-layout {
		display: grid;
		grid-template-columns: 200px minmax(0, 800px);
		gap: var(--space-l);
	}

	.content-header {
		font-family: var(--font-body);
		font-size: var(--font-size-base);
		font-weight: 400;
		line-height: var(--leading-tight);
		margin: 0;
		margin-bottom: var(--space-2xs);
		padding: 0;
		display: flex;
		align-items: flex-start;
		gap: var(--space-2xs);
	}

	.content-header svg,
	.byline svg {
		flex-shrink: 0;
		position: relative;
		top: 7px;
	}

	.above-title {
		display: flex;
		align-items: center;
		gap: var(--space-xs);
		margin-bottom: var(--space-m);
	}

	.metadata {
		display: flex;
		flex-direction: column;
		gap: var(--space-xs);
		margin-top: var(--space-xs);
	}

	.metadata :global(.styled-list) {
		margin: 0;
	}

	.date-permalink {
		display: flex;
		align-items: center;
		gap: var(--space-2xs);
	}

	time {
		font-size: var(--font-size-sm);
		color: var(--flexoki-600);
		font-family: var(--font-sans);
	}

	.content {
		font-family: var(--font-serif);
		font-size: var(--font-size-base);
		line-height: 1.6;
		color: var(--flexoki-800);
	}

	.prose {
		padding-bottom: var(--space-xl);
	}

	.prose :global(p) {
		line-height: var(--leading-loose);
		padding: 0 1.5rem;
	}

	.reference-card {
		padding: 1.25rem 1.5rem;
		border-radius: 0.5rem;
		border: 1px solid var(--flexoki-300);
		width: 100%;
		box-shadow: var(--box-shadow-sm);
		margin-bottom: var(--space-s);
	}

	.reference-card:hover {
		background-color: white;
		transition: all 0.4s ease;
		cursor: pointer;
	}

	.byline {
		display: flex;
		align-items: flex-start;
		gap: var(--space-2xs);
		font-family: var(--font-sans);
		font-size: var(--font-size-sm);
		color: var(--flexoki-600);
		font-weight: 400;
	}

	.styled-main {
		max-width: 800px;
		margin: var(--space-xs) auto 0;
		padding: var(--space-xs) 0 var(--space-2xl);
	}

	.back-link {
		display: flex;
		align-items: center;
		height: 100%;
	}

	.back-link a {
		display: inline-flex;
		align-items: center;
		position: relative;
		font-family: var(--font-sans);
		font-size: var(--font-size-xs);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-weight: bold;
		transition: all 0.8s cubic-bezier(0.2, 1, 0.8, 1);
		margin: 0;
		padding: 0;
	}

	.back-link svg {
		width: 0;
		transition: all 0.8s cubic-bezier(0.2, 1, 0.8, 1);
		color: var(--flexoki-300);
		position: relative;
		top: 1px;
	}

	.back-link span {
		display: inline-block;
		transition: transform 0.3s cubic-bezier(0.2, 1, 0.8, 1);
		color: var(--flexoki-600);
	}

	.back-link span:hover {
		color: var(--flexoki-cyan-400);
	}

	.back-link a:hover svg {
		width: 16px;
		margin-right: 2px;
		color: var(--flexoki-150);
	}

	.back-link a:hover span {
		transform: translate3d(3px, 0, 0);
	}

	@media (max-width: 768px) {
		.smidgeon-layout {
			grid-template-columns: 1fr;
			gap: var(--space-s);
		}

		.metadata {
			flex-direction: row;
			flex-wrap: wrap;
			align-items: center;
			gap: var(--space-s);
		}

		.styled-main {
			padding: var(--space-xl) var(--space-xs);
		}

		.header-section {
			padding: 0 var(--space-xs);
		}
	}
</style>
